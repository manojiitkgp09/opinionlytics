<% @surveys.each do |survey| %>

<tr style="margin-bottom: 10px;border-width: 1px; border-style: solid; border-color:#000;background-color: #c3d9ff;">
  <td><%= survey.title %></td>
  <% if current_user.isadmin? %>
  <td align = "center"><% if survey.status == true %><%= link_to 'disable', :controller => 'surveys', :action => 'enb_disb', :id => survey.id %>
    <% else %><%= link_to 'enable', :controller => 'surveys', :action => 'enb_disb', :id => survey.id %><% end %>
    <% end %> </td>
  <td><%= survey.created_at %></td>
  <td>
<%= survey.updated_at %>
</td>
  <td align = "center"><%= link_to 'Show', survey %></td>
  <td align = "center"><%= link_to 'Edit', edit_survey_path(survey) %></td>
  <td></td>
  <td align = "center"><%= link_to 'Destroy', survey, :confirm => 'Are you sure?', :method => :delete %></td>

</tr>
<% end %>
